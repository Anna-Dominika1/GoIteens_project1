{{#each results}}
<li class="card">
    <div class="div_wrapper">
        {{#if poster_path}}
        <img class="img_if" width="250" height="350" class="card__image"
            src="https://image.tmdb.org/t/p/w300{{poster_path}}" />
        {{/if}}
        {{#unless poster_path}}
        <img class="img_unless" width="250" height="350" class="card__image" src="./images/no_poster.jpg"
            alt="no-poster" />

        {{/unless}}
    </div>
    <div class="card_menu-wrapper">
        <div class="raiting">
            <h3 class="card-menu-rating">{{vote_average}}</h3>
        </div>
        <div class="this.original-language"></div>

        <h2 class="card_headline">{{title}} <span class="id_films">{{id}}</span> </h2>

        {{!-- <button class="like-button"></button> --}}

        {{!-- <button type="button" class="card-menu_btn">
            <span>info</span>
        </button> --}}
</li>
{{/each}}